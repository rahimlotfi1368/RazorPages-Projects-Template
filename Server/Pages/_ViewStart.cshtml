@{
    var cultureName = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;

    switch (cultureName)
    {
        case "fa":
        case "ar":
            {
                Layout = "Layouts/RTL/_DefaultLayout";
                break;
            }

        default:
           {
                Layout = "Layouts/LTR/_DefaultLayout";
                break;
           }
    }
}
